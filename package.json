{
  "name": "tralert",
  "version": "1.0.0",
  "description": "Tralert app",
  "scripts": {
    "bootstrap": "lerna clean --yes && lerna bootstrap --hoist",
    "alert": "npm --prefix services/alert",
    "auth": "npm --prefix services/auth",
    "transport": "npm --prefix services/transport",
    "web": "npm --prefix services/web",
    "dev": "lerna run dev --stream",
    "debug": "lerna run debug --stream",
    "test": "jest",
    "test:watch": "npm run test -- --watchAll",
    "coverage": "npm run test -- --coverage",
    "lint": "eslint --ext .js --ext .jsx .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write ."
  },
  "author": "Roberto Gimeno",
  "devDependencies": {
    "eslint": "7.3.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-jest": "^23.13.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "eslint-plugin-security": "^1.4.0",
    "husky": "^4.2.5",
    "jest": "26.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.9",
    "mongodb-memory-server": "^6.6.1",
    "node-mocks-http": "^1.8.1",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  }
}
